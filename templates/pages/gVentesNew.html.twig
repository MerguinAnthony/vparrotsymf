{% extends "base.html.twig" %}

{% block title %}{{ title_page }}{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{asset('assets/styles/style.css')}}">
  <link rel="stylesheet" href="{{asset('assets/styles/bootstrap.min.css')}}">
{% endblock %}

{% block header %}
  {% include "partials/back/_header.html.twig" %}
  {% include "partials/back/_nav.html.twig" %}
{% endblock %}

{% block body %}
<style>
.content{
    background: var(--clr-primary);
    height: 100vh;
}
h1{
    text-align: center;
    color: black;
    margin: 0 auto;
    padding: 20px 0;
}    
h2{
    text-align: center;
    color: var(--clr-secondary);
    margin: 0 auto;
    padding: 0 0 20px 0;
}

.addVehiForm{
    width: 80%;
    margin: 0 auto;
    padding: 20px;
    background: var(--clr-secondary);
    border-radius: 10px;
    box-shadow: 0 0 10px black;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    
}
.form-group{
    margin: 0 auto;
    text-align: center;
}
.form-label{
    color: var(--clr-primary);
    font-weight: bold;
}
.form-input{
    margin-top: 10px;
}
.form-error{
    color: red;
    font-weight: bold;
}
.btn{

    margin: 10px auto;
    display: block;

}
@media only screen and (max-width: 767px) {	
.content{
    height: auto;
}
}
</style>
<div class="content">
<h1>Gestion des véhicules</h1>
<h2>Ajouter un véhicule à la vente</h2>
<section class="addVehiForm">
{{ form_start(form) }}
    <div class="form-error">
    {{  form_errors(form) }}
    </div>
    <div class="row">
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.brand)}}
        </div>
        <div class="form-input">
          {{form_widget(form.brand)}}
        </div>
        <div class="form-error">
          {{form_errors(form.brand)}}
        </div>
      </div>
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.model)}}
        </div>
        <div class="form-input">
          {{form_widget(form.model)}}
        </div>
        <div class="form-error">
          {{form_errors(form.model)}}
        </div>
      </div>
        <div class="col form-group">
          <div class="form-label">
            {{form_label(form.year)}}
          </div>
          <div class="form-input">
            {{form_widget(form.year)}}
          </div>
          <div class="form-error">
            {{form_errors(form.year)}}
          </div>
        </div>
    </div>
    <div class="row">
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.mileage)}}
        </div>
        <div class="form-input">
          {{form_widget(form.mileage)}}
        </div>
        <div class="form-error">
          {{form_errors(form.mileage)}}
        </div>
      </div>
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.energy)}}
        </div>
        <div class="form-input">
          {{form_widget(form.energy)}}
        </div>
        <div class="form-error">
          {{form_errors(form.energy)}}
        </div>
      </div>
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.power)}}
        </div>
        <div class="form-input">
          {{form_widget(form.power)}}
        </div>
        <div class="form-error">
          {{form_errors(form.power)}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.fiscalpower)}}
        </div>
        <div class="form-input">
          {{form_widget(form.fiscalpower)}}
        </div>
        <div class="form-error">
          {{form_errors(form.fiscalpower)}}
        </div>
      </div>
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.price)}}
        </div>
        <div class="form-input">
          {{form_widget(form.price)}}
        </div>
        <div class="form-error">
          {{form_errors(form.price)}}
        </div>
      </div>
    </div
    <div class="form-group">
      <div class="form-label">
        {{form_label(form.description)}}
      </div>
      <div class="form-input">
        {{form_widget(form.description)}}
      </div>
      <div class="form-error">
        {{form_errors(form.description)}}
      </div>
      <div class="btn">
      {{ form_row (form.submit) }}
      </div>
    </div>


{{ form_end(form) }}
</section>
</div>
{% endblock %}
