{% extends 'base.html.twig' %}

{% block title %}
    {{title_page}}
{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="{{asset('assets/styles/gen.css')}}">
{% endblock %}

{% block header %}
    {% include "partials/_header.html.twig" %}
    {% include "partials/_nav_back.html.twig" %}
{% endblock %}

{% block body %}
<style>
    .equal-columns-table {
        table-layout: fixed;
    }
</style>
    <div class="container">
        <h1>{{ h1_index }}</h1>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success w-100 mx-auto my-4 rounded-0 text-center">
            {{ message }}
        </div>
        {% endfor %}
    </div>
    <table class="table table-striped d-none d-md-table text-center w-50 mx-auto">
        <thead>
            <tr>
                <th>{{ th_1 }}</th>
                <th>{{ th_2 }}</th>
                <th class="th-modify"></th>     
            </tr>
        </thead>
        <tbody>
        {% for hours in hour %}
            <tr>
                <td>{{ hours.days }}</td>
                <td>{{ hours.hours }}</td>
                <td class="td-modify"><a href="{{ path('app_gestion_horaires_edit', {id: hours.id }) }}" class="btn btn-warning text-center rounded-0">Modifier</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


