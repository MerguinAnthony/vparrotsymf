{% extends 'base.html.twig' %}

{% block title %}
    {{title_page}}
{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="{{asset('assets/styles/gen.css')}}">
{% endblock %}

{% block header %}
    {% include "partials/_header.html.twig" %}
    {% include "partials/_nav_back.html.twig" %}
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">{{ h1_index }}</h1>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success w-100 mx-auto my-4 rounded-0 text-center">
        {{ message }}
    </div>
    {% endfor %}
    <div class="d-flex justify-content-center my-4">
        <a href="{{ path('app_registration') }}" class="btn btn-primary w-50 rounded-0" id="addemployee_submit">{{ add_btn }}</a>
    </div>
    <div class="count d-flex justify-content-center w-25 my-4 mx-auto fs-5">
        {{ count_employee }} {{ users.getTotalItemCount-1 }}
    </div>
    <table class="table table-striped d-none d-md-table">
        <thead>
            <tr>
                <th>{{ th_lastname }}
                    <a id="sortlastname">
                        <svg 
                            xmlns="http://www.w3.org/2000/svg"
                            xmlns:xlink="http://www.w3.org/1999/xlink"
                            width="22px" height="20px">
                            <image  x="0px" y="0px" width="22px" height="20px"  xlink:href="data:img/png;base64," />
                        </svg>
                    </a>
                </th>
                <th>{{ th_firstname }}
                    <a id="sortFirstname">
                        <svg 
                            xmlns="http://www.w3.org/2000/svg"
                            xmlns:xlink="http://www.w3.org/1999/xlink"
                            width="22px" height="20px">
                            <image  x="0px" y="0px" width="22px" height="20px"  xlink:href="data:img/png;base64," />
                        </svg>
                    </a>
                </th>
                <th>{{ th_function }}
                    <a id="sortFuction">
                        <svg 
                            xmlns="http://www.w3.org/2000/svg"
                            xmlns:xlink="http://www.w3.org/1999/xlink"
                            width="22px" height="20px">
                            <image  x="0px" y="0px" width="22px" height="20px"  xlink:href="data:img/png;base64," />
                        </svg>
                    </a>
                </th>
                <th>{{ th_email }}</th>
                <th class="th-modify"></th>
                <th class="th-delete"></th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{user.lastname}}</td>
                <td>{{user.firstname}}</td>
                <td>{{user.function}}</td>
                <td>{{user.email}}</td>
                <td class="th-modify"><a href="{{ path('app_gestion_employee_edit', {id: user.id }) }}" class="btn btn-warning text-center rounded-0">{{ td_modify }}</a></td>
                {% if user.roles == ["ROLE_USER"] %}
                    <td class="th-delete"><a href="{{ path('app_gestion_employee_delete', {id: user.id }) }}" class="btn btn-danger rounded-0">{{ td_delete }}</a></td>
                {% else %}
                    <td class="th-delete"></td>
                {% endif %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% for user in users %}
    <div class="card my-4 w-75 mx-auto d-md-none">
        <div class="card-header">{{user.lastname}} {{user.firstname}}</div>
        <div class="card-body">
            <h5 class="card-title">{{user.email}}</h5>
            <p class="card-text">{{user.function}}</p>
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_gestion_employee_edit', {id: user.id }) }}" class="btn btn-warning text-center rounded-0">{{ td_modify }}</a>
                <a href="{{ path('app_gestion_employee_delete', {id: user.id }) }}" class="btn btn-danger rounded-0">{{ td_delete }}</a>
            </div>
        </div>
    </div>
    {% endfor %}
    <div>
        {{ knp_pagination_render(users) }}
    </div>
</div>
<script src="{{asset('assets/scripts/sort.js')}}"></script>
{% endblock %}


