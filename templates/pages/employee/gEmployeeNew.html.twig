{% extends "base.html.twig" %}

{% block title %}{{ title_page }}{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{asset('assets/styles/style.css')}}">
  <link rel="stylesheet" href="{{asset('assets/styles/bootstrap.min.css')}}">
{% endblock %}

{% block header %}
  {% include "partials/back/_header.html.twig" %}
  {% include "partials/back/_nav.html.twig" %}
{% endblock %}

{% block body %}
<style>
.content{
    background: var(--clr-primary);
    height: 100vh;
}
h1{
    text-align: center;
    color: black;
    margin: 0 auto;
    padding: 20px 0;
}    
h2{
    text-align: center;
    color: var(--clr-secondary);
    margin: 0 auto;
    padding: 0 0 20px 0;
}

.addUserForm{
    width: 80%;
    margin: 0 auto;
    padding: 20px;
    background: var(--clr-secondary);
    box-shadow: 0 0 10px black;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    
}
.form-group{
    margin: 0 auto;
    text-align: center;
}
.form-label{
    color: var(--clr-primary);
    font-weight: bold;
}
.form-input{
    margin-top: 10px;
}
.form-error{
    color: red;
    font-weight: bold;
}
.btn-submit{
    display: block;
    margin: 0 auto;
    text-align: center;
    padding: 20px 0;
}
#addemployee_submit{
    background: var(--clr-primary);
    color: var(--clr-secondary);
    border: none;
    padding: 10px 20px;
    font-weight: bold;
    cursor: pointer;
}
#users_submit:hover{
    background: var(--clr-secondary);
    color: var(--clr-primary);
    border: 1px solid var(--clr-primary);
    transition: 0.5s;
}

@media only screen and (max-width: 767px) {	
.content{
    height: auto;
}
}
</style>
<div class="content">
<h1>Gestion des employés</h1>
<h2>Ajouter un nouvel employé</h2>
<section class="addUserForm">
{{ form_start(form) }}
    <div class="form-error">
    {{  form_errors(form) }}
    </div>
    <div class="row">
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.email)}}
        </div>
        <div class="form-input">
          {{form_widget(form.email)}}
        </div>
        <div class="form-error">
          {{form_errors(form.email)}}
        </div>
      </div>
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.plainPassword)}}
        </div>
        <div class="form-input">
          {{form_widget(form.plainPassword)}}
        </div>
        <div class="form-error">
          {{form_errors(form.plainPassword)}}
        </div>
      </div>
        <div class="col form-group">
          <div class="form-label">
            {{form_label(form.lastname)}}
          </div>
          <div class="form-input">
            {{form_widget(form.lastname)}}
          </div>
          <div class="form-error">
            {{form_errors(form.lastname)}}
          </div>
        </div>
    </div>
    <div class="row">
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.firstname)}}
        </div>
        <div class="form-input">
          {{form_widget(form.firstname)}}
        </div>
        <div class="form-error">
          {{form_errors(form.firstname)}}
        </div>
      </div>
      <div class="col form-group">
        <div class="form-label">
          {{form_label(form.function)}}
        </div>
        <div class="form-input">
          {{form_widget(form.function)}}
        </div>
        <div class="form-error">
          {{form_errors(form.function)}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="btn-submit">
      {{ form_row (form.submit) }}
      </div>
    </div>
{{ form_end(form) }}
</section>
</div>
{% endblock %}
