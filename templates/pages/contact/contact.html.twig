{% extends 'base.html.twig' %}

{% block title %}{{ title_page }}{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{asset('assets/styles/general_frontoffice.css')}}">

{% endblock %}

{% block header %}
    {{ parent() }}
    {% include "partials/_nav.html.twig" %}
{% endblock %}

{% block body %}
<style>
    .contact {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: auto;
        width: 100%;
        margin: 20px auto;
        padding: 20px;
    }

    .contact h1 {
        font-size: 2rem;
        margin: 2rem 0;
    }

    .contact{ 
        width: 90%;
        height: auto;
        margin: 20px auto;
        padding: 20px auto;
        border: 1px solid var(--clr-secondary);
        box-shadow: 0 0 10px var(--clr-primary);
    }
    .form-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 90%;
        height: 30px;
        border: 1px solid var(--clr-secondary);
        margin: 5px auto;
        padding: 5px;
    }

    label {
        font-size: 1.2rem;
        margin: 5px;
    }

    input {
        width: 90%;
        height: 100%;
        border: none;
        outline: none;
        font-size: 1.2rem;
        padding: 5px;
    }

    #contact_message {
        width: 90%;
        height: 100%;
        outline: none;
        font-size: 1.2rem;
        padding: 5px;
    }

    .addBtn {
        height: auto;
        margin: 5px auto;
        padding: 10px 20px;
        border: none;
        background-color: var(--clr-secondary);
        color: var(--clr-tertiary);
        font-size: 1.2rem;
        cursor: pointer;
    }

    .addBtn:hover {
        background-color: var(--clr-primary);
        color: var(--clr-secondary);
        transition: 0.5s;
        box-shadow: 0 0 10px var(--clr-secondary);
    }

@media screen and (min-width: 768px) {
    .contact {
        width: 50%;
        height: auto;
        margin: 20px auto;
        padding: 20px auto;
        border: 1px solid var(--clr-secondary);
        box-shadow: 0 0 10px var(--clr-primary);
    }

    .form-group {
        width: 100%;
        height: 30px;
        border: 1px solid var(--clr-secondary);
        margin: 5px auto;
        padding: 5px;
    }

    label {
        font-size: 1.2rem;
        margin: 5px;
    }

    input {
        width: 100%;
        height: 100%;
        border: none;
        outline: none;
        font-size: 1.2rem;
        padding: 5px;
    }

    #contact_message {
        width: 100%;
        height: 100%;
        outline: none;
        font-size: 1.2rem;
        padding: 5px;
    }

    .addBtn {
        height: auto;
        margin: 5px auto;
        padding: 10px 20px;
        border: none;
        background-color: var(--clr-secondary);
        color: var(--clr-tertiary);
        font-size: 1.2rem;
        cursor: pointer;
    }

    .addBtn:hover {
        background-color: var(--clr-primary);
        color: var(--clr-secondary);
        transition: 0.5s;
        box-shadow: 0 0 10px var(--clr-secondary);
    }
    
}
</style>

<div class="container">
    <h1>{{ h1_contact }}</h1>
    <section class="contact">
    {{ form (form) }}
    </section>

</div>


{% endblock %}
