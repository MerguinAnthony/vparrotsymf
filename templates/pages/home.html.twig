{% extends "base.html.twig" %}
{% block title %}Accueil | V.Parrot{% endblock %}

{% block header %}
    {{ parent() }}
    {% include "partials/_nav.html.twig" %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success w-25 mx-auto my-4 rounded-4 text-center" id="successAlert">
            {{ message }}
        </div>
        <script>
            setTimeout(function() {
                document.getElementById('successAlert').style.display = 'none';
            }, 3000);
        </script>
    {% endfor %}
{% endblock %}

{% block body %}
    {% if services is defined and services|length > 0 %}
        {% include "partials/_services.html.twig" %}
    {% endif %}
        {% if cars is defined and cars|length > 0 %}
        {% include "partials/_ventes.html.twig" %}
    {% endif %}
    {% if avis is defined and avis|length > 0 %}
        {% include "partials/_avis.html.twig" %}
    {% endif %}
    {% if hour is defined and hour|length > 0 %}
        {% include "partials/_footer.html.twig" %}
    {% endif %}
{% endblock %}

