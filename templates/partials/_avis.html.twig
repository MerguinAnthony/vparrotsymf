<style>
.avis{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    height: auto;
}

.h2avis{
  margin-top: 30px;
    color: var(--clr-secondary);
}

.avis-block{
    width: 80%;
    height: auto;
    background-color: var(--clr-primary);
    padding: 0 50px;
    margin: 5px auto;
}

.line1, .line2, .line3{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin: 20px auto;
}
.line1{
    justify-content: center;
    margin: 20px auto;
}

.line2:first-child{
  margin-bottom: 30px;
}


.line3{
  padding: 0 20px;
  margin-bottom: 20px;
  font-family: var(--font2);

}

.fa-car{
    color: var(--clr-secondary);
    font-size: 15px;
    margin-right: 5px;
}

#rank{
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: start;
}

.addbtn{
    display: block;
    margin: 10px auto;
    padding: 10px 20px;
    text-align: center;
    width: 50%;
    height: auto;
    background-color: var(--clr-secondary);
    color: var(--clr-primary);
}

@media screen and (min-width: 768px) {
  
  .avis{
    max-height: 100vh;
    padding:20px 0;
  }

.avis-block{
  display: grid;
  grid-template-columns: 200px 1fr;
  grid-template-rows: 50px 1fr;
  grid-template-areas: "line1 line2" "line3 line3";
    width: 90%;
    height: auto;
}

.line1{
  display: block;
  margin: auto 0;
  grid-area: line1;
  padding: 0 20px;
  }

.line2{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  grid-area: line2;
  padding: 0 20px;
  width: 100%;
  }

.line3{
  display: block;
  grid-area: line3;
  padding: 0 20px;
  width: 100%;
  text-align: start;
}

}
</style>

<section id="avis" class="avis">
  <h1 class="h2avis">Avis</h1>
  {% for avi in avis %}
    <div class="avis-block">
      <div class="line1">
        {% for i in 1..avi.rank %}
          <i class="fa-solid fa-car"></i>
        {% endfor %}
      </div>
      <div class="line2">
        <p class="item-avis">{{ avi.lastname }} {{ avi.firstname }}</p>
        <p class="item-avis">{{ avi.date|date("d/m/Y") }}</p>
      </div>
      <div class="line3">
        <p class="item-avis">{{ avi.message }}</p>
      </div>
    </div>
  {% endfor %}
  <a class="addbtn">Donnez-nous votre avis !</a>
</section>


<script src="https://kit.fontawesome.com/105098c44c.js" crossorigin="anonymous"></script>

