<style>
.avis{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    height: auto;
    background: var(--clr-tertiary);
}

.h1avis{
  margin-top: 30px;
  color: var(--clr-secondary);
}

.avis-block{
    width: 70%;
    height: auto;
    background-color: var(--clr-primary);
    padding: 0 50px;
    margin: 5px auto;
}

.line1, .line2, .line3{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin: 20px auto;
}
.line1{
    justify-content: center;
    margin: 20px auto;
}

.line2:first-child{
  margin-bottom: 30px;
}


.line3{
  padding: 0 20px;
  margin-bottom: 20px;
  font-family: var(--font2);

}

.fa-car{
    color: var(--clr-secondary);
    font-size: 15px;
    margin-right: 5px;
}

#rank{
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: start;
}

.addbtn{
    display: block;
    margin: 10px auto;
    padding: 10px 20px;
    text-align: center;
    width: 50%;
    height: auto;
    background-color: var(--clr-secondary);
    color: var(--clr-primary);
    cursor: pointer;
}

.modal{
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: auto;
    overflow: auto;
    background-color: var(--clr-primary);
}

.modal-header{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 20px 40px;
    background-color: var(--clr-secondary);
    color: var(--clr-primary);
}

.modal-main{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0;
    background-color: var(--clr-primary);
    color: var(--clr-secondary);
}

.modal-main-form{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0;
    background-color: var(--clr-primary);
    color: var(--clr-secondary);
}

.form-group{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0;
    background-color: var(--clr-primary);
    color: var(--clr-secondary);
    width: 100%;
}

.form-label{
    font-family: var(--font1);
    margin: 10px 0;
}

.form-input{
    width: 100%;
    text-align: center;
}
    
input{
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    border: 1px solid var(--clr-secondary);
    border-radius: 4px;
    background-color: var(--clr-tertiary);
    color: var(--clr-secondary);
}

.form-error{
    color: var(--clr-secondary);
    font-family: var(--font2);
    font-size: 12px;
    margin: 5px 0;
}

#rank-car{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 10px auto;
}

#rank-car .fa-car{
  color: var(--clr-secondary);
  font-size: 30px;
  margin: 0 5px;
  cursor: pointer;
}
select{
  display: none;
}

#avis_submit{
  display: block;
  margin: 10px auto;
  padding: 10px 20px;
  text-align: center;
  width: 50%;
  height: auto;
  background-color: var(--clr-secondary);
  color: var(--clr-primary);
  cursor: pointer;
  border: none;
}

#avis_submit:hover{
  background-color: var(--clr-primary);
  color: var(--clr-secondary);
  border: 1px solid var(--clr-primary);
  box-shadow: 0 0 10px var(--clr-tertiary);
  transition: 0.5s;
}

@media screen and (min-width: 768px) {
  
.h1avis{
  margin-top: 30px;
  padding: 0;
}

  .avis{
    height: auto;
    padding:20px 0;
  }

.avis-block{
  display: grid;
  grid-template-columns: 200px 1fr;
  grid-template-rows: 50px 1fr;
  grid-template-areas: "line1 line2" "line3 line3";
  height: auto;
}

.line1{
  display: block;
  margin: auto 0;
  grid-area: line1;
  padding: 0 20px;
  }

.line2{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  grid-area: line2;
  padding: 0 20px;
  width: 100%;
  }

.line3{
  display: block;
  grid-area: line3;
  padding: 0 20px;
  width: 100%;
  text-align: start;
}

.modal{
  display: none;
  position: fixed;
  z-index: 1000;
  left: 15%;
  top: 5%;
  width: 70%;
  height: 90%;
  overflow: auto;
  background-color: var(--clr-primary);
}

}
</style>

<section id="avis" class="avis">
  <h1 class="h1avis">Avis</h1>
  {% for avi in avis %}
    <div class="avis-block">
      <div class="line1">
        {% for i in 1..avi.rank %}
          <i class="fa-solid fa-car"></i>
        {% endfor %}
      </div>
      <div class="line2">
        <p class="item-avis">{{ avi.lastname }} {{ avi.firstname }}</p>
        <p class="item-avis">{{ avi.date|date("d/m/Y") }}</p>
      </div>
      <div class="line3">
        <p class="item-avis">{{ avi.message }}</p>
      </div>
    </div>
  {% endfor %}
  <a id="openModal" class="addbtn">Donnez-nous votre avis !</a>
  <div id="modal" class="modal">
				<div class="modal-header">
					<h5>
						Donnez-nous votre avis !
					</h5>
					<button type="button" id="closeModal">
						<i class="fa-solid fa-xmark"></i>
					</button>
				</div>
				<div class="modal-main">
					<div class="modal-main-form"> 
          {{ form_start(form) }}
      <div class="form-group">
        <div class="form-label">
          {{form_label(form.lastname)}}
        </div>
        <div class="form-input">
          {{form_widget(form.lastname)}}
        </div>
        <div class="form-error">
          {{form_errors(form.lastname)}}
        </div>
      </div>
      <div class="form-group">
        <div class="form-label">
          {{form_label(form.firstname)}}
        </div>
        <div class="form-input">
          {{form_widget(form.firstname)}}
        </div>
        <div class="form-error">
          {{form_errors(form.firstname)}}
        </div>
      </div>
      <div class="form-group">
        <div class="form-label">
          {{form_label(form.rank)}}
        </div>
        <div class="form-input">
          {{form_widget(form.rank)}}
        </div>
        <div id="rank-car">
        {% for i in 1..5 %}
            <i class="fa-solid fa-car" data-value="{{ i }}"></i>
        {% endfor %}
        </div>
        <div class="form-error">
          {{form_errors(form.rank)}}
        </div>
      </div>
      <div class="form-group">
        <div class="form-label">
          {{form_label(form.message)}}
        </div>
        <div class="form-input">
          {{form_widget(form.message)}}
        </div>
        <div class="form-error">
          {{form_errors(form.message)}}
        </div>
      </div>
      {{ form_row (form.submit) }}
    </div>
    {{ form_end(form) }}
          </div>
        </div>
</section>


<script src="https://kit.fontawesome.com/105098c44c.js" crossorigin="anonymous"></script>
<script>
    // Ouvrir et fermer la modal
    const openModal = document.getElementById('openModal');
    const closeModal = document.getElementById('closeModal');
    const modal = document.getElementById('modal');

    openModal.addEventListener('click', function() {
        modal.style.display = 'block';
    });

    closeModal.addEventListener('click', function() {
        modal.style.display = 'none';
    });

    window.addEventListener('click', function(e) {
        if (e.target == modal) {
            modal.style.display = 'none';
        }
    });

    // Récupérer les voitures
    const rankCar = document.getElementById('rank-car');
    const cars = rankCar.children;
    const rankInput = document.getElementById('{{ form.rank.vars.id }}');

    // Fonction pour mettre à jour la couleur des voitures en fonction de la valeur
    function updateCarColor() {
        const value = rankInput.value;
        for (let i = 0; i < cars.length; i++) {
            if (i < value) {
                cars[i].style.color = 'var(--clr-secondary)';
            } else {
                cars[i].style.color = 'var(--clr-tertiary)';
            }
        }
    }

    // Ajouter un event listener pour le survol de la souris
    rankCar.addEventListener('mouseover', function(e) {
        const target = e.target;
        if (target.tagName === 'I') {
            const value = target.getAttribute('data-value');
            rankInput.value = value;
            updateCarColor();
        }
    });

    // Appeler la fonction lors du chargement initial de la page
    updateCarColor();
</script>
